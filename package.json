{
  "name": "vscode-ng-i18n-editor",
  "displayName": "Angular I18n Editor",
  "description": "An editor for angular generated xliff translation file.",
  "version": "0.2.2",
  "publisher": "Roman-Lo",
  "license": "MIT",
  "engines": {
    "vscode": "^1.46.0"
  },
  "icon": "angular.png",
  "keywords": [
    "Angular",
    "I18n",
    "Localization Editor",
    "Xliff Editor",
    "Translation Editor"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:/.ngI18nconfig",
    "workspaceContains:.ngI18nExt"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "vscode-ng-i18n-editor.openEditor",
        "title": "Angular I18n Editor: Open"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .xlf",
          "command": "vscode-ng-i18n-editor.openEditor",
          "group": "1_modification@1"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .xlf",
          "command": "vscode-ng-i18n-editor.openEditor",
          "group": "1_modification@1"
        }
      ]
    },
    "jsonValidation": [
      {
        "fileMatch": ".ngI18nconfig",
        "url": "./schema/ngI18nconfig.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "lint": "eslint src --ext ts",
    "webpack-dev": "webpack --mode development",
    "webpack-dev-watch": "webpack --mode development --watch",
    "pretest": "yarn run webpack-dev && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "ant-design-vue": "^1.6.2",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "raw-loader": "^4.0.1",
    "ts-loader": "^7.0.5",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "vue": "^2.6.11",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Roman-Lo/vscode-ng-i18n-editor"
  }
}
